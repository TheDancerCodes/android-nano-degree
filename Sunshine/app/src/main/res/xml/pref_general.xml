<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.thomaskioko.sunshine.ui.views.LocationEditTextPreference
        android:defaultValue="@string/pref_default_value_location"
        android:inputType="text"
        android:key="@string/pref_key_location"
        android:singleLine="true"
        android:title="@string/pref_title_location"
        app:minLength="3" />

    <ListPreference
        android:defaultValue="@string/pref_default_value_metric"
        android:dialogTitle="@string/pref_title_metrics"
        android:entries="@array/temperature_units"
        android:entryValues="@array/temperature_values"
        android:key="@string/pref_key_units"
        android:title="@string/pref_title_metrics" />

    <ListPreference
        android:title="@string/pref_art_pack_label"
        android:key="@string/pref_art_pack_key"
        android:defaultValue="@string/pref_art_pack_sunshine"
        android:entryValues="@array/pref_art_pack_values"
        android:entries="@array/pref_art_pack_options" />

    <CheckBoxPreference
        android:defaultValue="@string/pref_enable_notifications_default"
        android:key="@string/pref_enable_notifications_key"
        android:summaryOff="@string/pref_enable_notifications_false"
        android:summaryOn="@string/pref_enable_notifications_true"
        android:title="@string/pref_enable_notifications_label" />
</PreferenceScreen>